[user]
    name = Chiel ten Brinke
    email = ctenbrinke@gmail.com
[push]
    default = simple
[merge]
    tool = kdiff3
    conflictstyle = diff3
[mergetool]
    keeptemporaries = false
    keepbackups = false
    prompt = false
    trustexitcode = false
[mergetool "kdiff3"]
    path = c:/Program Files/KDiff3/kdiff3.exe
[diff]
    guitool = kdiff3
[difftool "kdiff3"]
    path = C:/Program Files/KDiff3/kdiff3.exe
[core]
    fscache = true
    preloadindex = true
    editor = vim -u ~/.vimrc.bare
    whitespace = cr-at-eol
    trustctime = false
    filemode = false
    pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
    lg = log --notes --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(dim white)- %an%C(reset) %C(dim red)(%ar)%C(reset)'
    lga = !sh -c 'git lg --all'

    last = log -1 --stat
    unstage = reset HEAD --
    pushf = push --force-with-lease
    unlock = "!f() { root=$(git rev-parse --show-toplevel); rm "$root/.git/index.lock"; }; f"
    update = "!f() { if [ $# -eq 0 ] ; then git reset --hard @{u}; else git fetch . "origin/$1:$1" --recurse-submodules=no; fi }; f"

    cp = cherry-pick
    co = checkout
    ci = commit
    st = status -sb
    br = branch

    patch = --no-pager diff --no-color
[fetch]
    recurseSubmodules = true
[gc]
    auto = 256
[color]
    ui = true
[web]
    browser = google-chrome


[user]
    name = Chiel ten Brinke
    email = chiel.tenbrinke@intellimagic.com
[push]
    default = simple
[credential]
    ;helper = cache
    helper = wincred
[merge]
    tool = kdiff3
[mergetool "meld"]
    path = C:/Program Files (x86)/Meld/Meld.exe
    cmd = \"C:/Program Files (x86)/Meld/Meld.exe\" --diff $LOCAL $BASE $REMOTE --output $MERGED
[mergetool "kdiff3"]
    path = c:/Program Files/KDiff3/kdiff3.exe
[diff]
    guitool = kdiff3
[difftool "kdiff3"]
    path = C:/Program Files/KDiff3/kdiff3.exe
[core]
    autocrlf = true
    fscache = true
    preloadindex = true
    editor = vim -u ~/_vimrc.bare
    whitespace = cr-at-eol
[guitool "Pull"]
    cmd = "git remote update --prune; git pull origin $(git symbolic-ref HEAD | sed s/refs.heads.//)"
[guitool "Update remote namespace"]
    cmd = git remote update --prune
    noconsole = yes
[guitool "vdiff"]
    cmd = git vdiff
    noconsole = yes
[guitool "p4diff"]
    cmd = git p4diff
    noconsole = yes
[guitool "Clean"]
    cmd = git clean -x -d -f
[guitool "Reset and Clean"]
    cmd = "git reset --hard ; git clean -x -d -f"
[gui]
    gcwarning = false
    recentrepo = C:/Projects/StorageMagic
[alias]
    vdiff = !sh gitvdiff
    p4diff = !sh gitp4diff
    vbdiff = !sh gitvbdiff
    drlog = !sh -c 'git log --pretty=tformat:%s $0 | sed -nre \"s/^(DR|FR|B)-?([[:digit:]]+).*/\\U\\1-\\2/Ip\" | sort | uniq'
    drlogx = !sh -c 'git drlog $0 | powershell -NoProfile -ExecutionPolicy Bypass -File /cmd/Get-DRDetails.ps1'
    iclone = !sh -c 'git clone --recurse ssh://intellimagic@imcentos-git/~/$0.git && installhooks.sh $0/.git'
    uclone = !sh -c 'git clone --recurse ssh://$(whoami)@development.urios.nl/srv/git/$0.git && installhooks.sh $0/.git'
    getmodules = !sh -c 'git submodule update --init --recursive && installhooks.sh ./.git'

    lg = log --notes --graph --decorate --oneline --color=always
    lga = log --all --notes --graph --decorate --oneline --color=always
    rlog = !"git --no-pager log --all --graph --decorate --oneline --color=never | tac | awk -f ~/switchslashes.awk | less -X +G -r"

    dff = diff --color-words="[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+"
    shw = show --color-words="[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+"

    lg1 = !"git lg1-specific --all"
    lg2 = !"git lg2-specific --all"
    lg3 = !"git lg3-specific --all"

    lg1-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    lg2-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
    lg3-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset) %C(bold cyan)(committed: %cD)%C(reset) %C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset)%n''          %C(dim white)- %an <%ae> %C(reset) %C(dim white)(committer: %cn <%ce>)%C(reset)'
[fetch]
    recurseSubmodules = true
[gc]
    auto = 256

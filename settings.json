{
    // VIM
    "vim.hlsearch": true,
    "vim.gdefault": true,
    "editor.renderIndentGuides": false,
    "vim.normalModeKeyBindings": [
        {
            "before": ["Y"],
            "after": [ "y", "$" ]
        }
    ],
    // https://github.com/VSCodeVim/Vim/issues/2007
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "u" ], "after": [],
            "commands": [ { "command": "undo" } ]
        },
        {
            "before": [ "U" ], "after": [],
            "commands": [ { "command": "redo" } ]
        },
        {
          "before":["<Esc>"],
          "after":["<Esc>"],
          "commands": [
            ":nohl"
          ]
        }
      ],
    "vim.visualstar": true,
    "vim.sneak": true,
    "vim.replaceWithRegister": true,
    "vim.sneakReplacesF": true,
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-k>": false,
        "<C-t>": false,
        "<C-l>": false,
        "<C-h>": false,
        "<C-n>": false
    },
    "vim.smartRelativeLine": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.startofline": false,


    // TERMINAL
    "terminal.external.windowsExec": "C:\\Program Files\\Git\\bin\\bash.exe",
    "editor.fontFamily": "Cascadia Code",
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "source": "Git Bash"
        },
        "PowerShell": null,
        "Command Prompt": null
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash",


    // THEMING
    "editor.semanticHighlighting.enabled": true,
    "workbench.preferredDarkColorTheme": "SynthWave '84",
    "workbench.preferredLightColorTheme": "SynthWave '84",
    "window.autoDetectColorScheme": true,
    "workbench.colorTheme": "Noctis Lux",
    "workbench.colorCustomizations": {
        "[SynthWave '84]": {
// Base16:
// base00 - Default Background
// base01 - Lighter Background (Used for status bars, line number and folding marks)
// base02 - Selection Background
// base03 - Comments, Invisibles, Line Highlighting
// base04 - Dark Foreground (Used for status bars)
// base05 - Default Foreground, Caret, Delimiters, Operators
// base06 - Light Foreground (Not often used)
// base07 - Light Background (Not often used)
// base08 - Variables, XML Tags, Markup Link Text, Markup Lists, Diff Deleted
// base09 - Integers, Boolean, Constants, XML Attributes, Markup Link Url
// base0A - Classes, Markup Bold, Search Text Background
// base0B - Strings, Inherited Class, Markup Code, Diff Inserted
// base0C - Support, Regular Expressions, Escape Characters, Markup Quotes
// base0D - Functions, Methods, Attribute IDs, Headings
// base0E - Keywords, Storage, Selector, Markup Italic, Diff Changed
// base0F - Deprecated, Opening/Closing Embedded Language Tags, e.g.

// bat base16:
// 0
// 1 tags, illegal background
// 2 strings
// 3 classes
// 4 functions
// 5 keywords
// 6 support
// 7 text
// 8 comment, unimplemented background
// 9 ints
// a
// b separator backround
// c
// d
// e labels, Deprecated background
// f classes, illegal

